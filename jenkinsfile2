pipeline {
    agent any
    stages {
        stage ('One') {
            steps {
                echo 'Hi, this is Ali'
            }
        }
        stage ('Two') {
            when {
                input 'Do you want to proceed?'
            }
            steps {
                echo 'Proceeding...'
            }
        }
        stage ('Three') {
            when {
                not {
                    branch 'master'
                }
            }
            steps {
                echo 'Hello'
            }
        }
        stage ('Four') {
            parallel {
                stage('Unit Test') {
                    steps {
                        echo 'Running the unit test..'
                    } 
                }
                stage('Integration Test') {
                    agent {
                        docker {
                            reuseNode false
                            image 'Ubuntu'
                        }
                    }
                    steps {
                        echo 'Running the integration test..'
                    }
                }
            }
        }
    }
}

   
